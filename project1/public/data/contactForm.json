{
  "title": "User Information Form",
  "fields": [
    {
      "name": "firstName",
      "label": "First Name",
      "type": "text",
      "placeholder": "Enter your first name",
      "validation": { "required": true, "minLength": 2 }
    },
    {
      "name": "lastName",
      "label": "Last Name",
      "type": "text",
      "placeholder": "Enter your last name",
      "validation": { "required": true, "minLength": 2 }
    },
    {
      "name": "email",
      "label": "Email",
      "type": "email",
      "placeholder": "example@email.com",
      "validation": { "required": true, "pattern": "^\\S+@\\S+\\.\\S+$" }
    },
    {
      "name": "country",
      "label": "Country",
      "type": "select",
      "options": ["United Kingdom", "India", "Germany", "France", "Canada"],
      "validation": { "required": true }
    },
    {
      "name": "gender",
      "label": "Gender",
      "type": "radio",
      "options": ["Male", "Female", "Other"],
      "validation": { "required": true }
    },
    {
      "name": "interests",
      "label": "Interests",
      "type": "checkbox",
      "options": ["Technology", "Sports", "Music", "Travel"]
    },
    {
      "name": "city",
      "label": "City (Auto-complete)",
      "type": "autocomplete",
      "options": ["London", "Birmingham", "Manchester", "Liverpool", "Leeds"]
    },
    {
      "name": "query",
      "label": "Your Query",
      "type": "textarea",
      "placeholder": "Write your question here...",
      "validation": { "required": true, "minLength": 10 }
    }
  ]
}
